<p id="notice"><%= notice %></p>

<h1>Game01s</h1>

<table>
  <thead>
    <tr>
      <th>Rule text</th>
      <th>Rule file</th>
      <th>Cover file</th>
      <th>Pieces</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @game01s.each do |game01| %>
      <tr>
        <td><%= game01.rule_text %></td>

        <td>
          <%= link_to game01.rule.filename, rails_blob_path(game01.rule, disposition: 'attachment') %>
        </td>
        <td>
          <%#= image_tag(game01.cover) %>     
          <%= image_tag(game01.cover, class: "image-cover") %>     
          <%#= image_tag game01.cover.variant(resize: "100x100", type: :grayscale) %>
        </td>
        <td>
          <%#= game01.pieces %>
          <% game01.pieces.each do |p| %>
            <%#= image_tag(p) %>
            <%= image_tag(p, class: "image-pieces")  %>
            <%#= image_tag p.variant(resize: "100x100") %>
          <% end %>
        </td>

        <td><%= link_to 'Show', game01 %></td>
        <td><%= link_to 'Edit', edit_game01_path(game01) %></td>
        <td><%= link_to 'Destroy', game01, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

